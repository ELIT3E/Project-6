---
interface Props {
  title: string;
  client: string;
  industry: string;
  location: string;
  challenge: string;
  solution: string;
  results: string[];
  testimonial?: {
    quote: string;
    author: string;
    position: string;
  };
  beforeImage?: string;
  afterImage?: string;
}

const { 
  title, 
  client, 
  industry, 
  location, 
  challenge, 
  solution, 
  results,
  testimonial,
  beforeImage,
  afterImage
} = Astro.props;
---

<div class="bg-white rounded-2xl shadow-strong overflow-hidden">
  <div class="bg-gradient-to-r from-jonas-blue to-jonas-dark-blue text-white p-8">
    <h3 class="text-2xl font-bold mb-2">{title}</h3>
    <div class="flex flex-wrap gap-4">
      <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm">
        <span class="font-medium">{client}</span>
      </div>
      <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm">
        <span class="font-medium">{industry}</span>
      </div>
      <div class="bg-white/20 backdrop-blur-sm px-3 py-1 rounded-full text-sm">
        <span class="font-medium">{location}</span>
      </div>
    </div>
  </div>
  
  <div class="p-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
      <div>
        <h4 class="text-lg font-bold text-jonas-dark-blue mb-3">Die Herausforderung</h4>
        <p class="text-jonas-gray">{challenge}</p>
      </div>
      <div>
        <h4 class="text-lg font-bold text-jonas-dark-blue mb-3">Unsere LÃ¶sung</h4>
        <p class="text-jonas-gray">{solution}</p>
      </div>
    </div>
    
    <div class="mb-8">
      <h4 class="text-lg font-bold text-jonas-dark-blue mb-3">Ergebnisse</h4>
      <ul class="space-y-2">
        {results.map(result => (
          <li class="flex items-start">
            <svg class="h-6 w-6 text-jonas-accent mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            <span class="text-jonas-gray">{result}</span>
          </li>
        ))}
      </ul>
    </div>
    
    {beforeImage && afterImage && (
      <div class="mb-8">
        <h4 class="text-lg font-bold text-jonas-dark-blue mb-3">Vorher / Nachher</h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <div class="relative">
              <img src={beforeImage} alt="Vorher" class="w-full h-48 object-cover rounded-lg">
              <div class="absolute top-2 left-2 bg-jonas-accent text-jonas-dark-blue px-2 py-1 rounded-md text-sm font-semibold">
                Vorher
              </div>
            </div>
          </div>
          <div>
            <div class="relative">
              <img src={afterImage} alt="Nachher" class="w-full h-48 object-cover rounded-lg">
              <div class="absolute top-2 left-2 bg-jonas-blue text-white px-2 py-1 rounded-md text-sm font-semibold">
                Nachher
              </div>
            </div>
          </div>
        </div>
      </div>
    )}
    
    {testimonial && (
      <div class="bg-jonas-light-gray p-6 rounded-lg">
        <div class="flex items-center mb-4">
          <div class="flex text-jonas-accent">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">

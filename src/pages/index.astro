---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import BeforeAfterSlider from '../components/BeforeAfterSlider.astro';
import PriceCalculator from '../components/PriceCalculator.astro';
import TestimonialCarousel from '../components/TestimonialCarousel.astro';
import ServiceComparisonTable from '../components/ServiceComparisonTable.astro';
import CookieConsent from '../components/CookieConsent.astro';
import ReviewSchema from '../components/ReviewSchema.astro';
---

<Layout 
  title="Jonas Gebäudereinigung Oldenburg - Professionelle Reinigungsdienstleistungen"
  description="Jonas Gebäudereinigung in Oldenburg bietet professionelle Büroreinigung, Grundreinigung, Glasreinigung und Unterhaltsreinigung. Zuverlässig, qualitativ hochwertig und zu fairen Preisen."
  keywords="Gebäudereinigung Oldenburg, Büroreinigung Oldenburg, Reinigungsfirma Oldenburg, Glasreinigung, Grundreinigung, Unterhaltsreinigung"
  ogImage="https://jonas-gebaeudereinigung.de/og-image.jpg"
>
  <Header />
  
  <!-- Hero Section -->
  <section class="relative min-h-screen bg-gradient-to-br from-jonas-blue via-jonas-dark-blue to-gray-900 text-white overflow-hidden flex items-center">
    <!-- Animated Background -->
    <div class="absolute inset-0">
      <div class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-jonas-blue/30 to-transparent"></div>
      <div class="absolute top-20 left-20 w-32 h-32 bg-jonas-accent/20 rounded-full animate-float"></div>
      <div class="absolute top-40 right-32 w-24 h-24 bg-white/10 rounded-full animate-float" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-32 left-1/4 w-40 h-40 bg-jonas-accent/10 rounded-full animate-float" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative container mx-auto px-4 py-20">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <div class="space-y-6">
            <h1 class="text-5xl lg:text-7xl font-bold leading-tight">
              Professionelle <span class="text-jonas-accent">Gebäudereinigung</span> in Oldenburg
            </h1>
            <p class="text-xl lg:text-2xl text-blue-100 leading-relaxed">
              Ihr zuverlässiger Partner für makellose Sauberkeit in Büros, Praxen und Gewerbeobjekten
            </p>
          </div>
          
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-center transform hover:scale-105 transition-all duration-300">
              <div class="text-3xl font-bold text-jonas-accent mb-2">15+</div>
              <div class="text-sm font-medium">Jahre Erfahrung</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-center transform hover:scale-105 transition-all duration-300">
              <div class="text-3xl font-bold text-jonas-accent mb-2">500+</div>
              <div class="text-sm font-medium">Zufriedene Kunden</div>
            </div>
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-center transform hover:scale-105 transition-all duration-300">
              <div class="text-3xl font-bold text-jonas-accent mb-2">24/7</div>
              <div class="text-sm font-medium">Notdienst</div>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/kontakt" class="bg-jonas-blue text-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-jonas-dark-blue transition-all duration-300 text-center shadow-medium transform hover:scale-105">
              Kostenlos anfragen
            </a>
            <a href="tel:+49441XXXXXXX" class="border-2 border-white text-white px-8 py-4 rounded-xl font-semibold text-lg hover:bg-white hover:text-jonas-blue transition-all duration-300 text-center transform hover:scale-105">
              <span class="flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                0441 - XXX XXX
              </span>
            </a>
          </div>
        </div>
        
        <div class="relative">
          <div class="relative">
            <img src="https://images.pexels.com/photos/4099354/pexels-photo-4099354.jpeg?auto=compress&cs=tinysrgb&w=800&h=600&fit=crop" alt="Professionelle Gebäudereinigung" class="rounded-2xl shadow-strong w-full h-auto" loading="eager">
            <div class="absolute -bottom-6 -left-6 bg-jonas-accent text-jonas-dark-blue p-6 rounded-xl shadow-strong animate-float">
              <div class="text-2xl font-bold">100%</div>
              <div class="text-sm font-medium">Kundenzufriedenheit</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Before/After Section -->
  <section class="py-20 bg-gradient-to-br from-white to-jonas-light-gray">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-jonas-dark-blue mb-6">Sehen Sie den Unterschied</h2>
        <p class="text-xl text-jonas-gray max-w-3xl mx-auto leading-relaxed">
          Überzeugen Sie sich selbst von der Qualität unserer Arbeit - Vorher-Nachher-Vergleiche unserer Reinigungsprojekte
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <div>
          <BeforeAfterSlider 
            beforeImage="https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop"
            afterImage="https://images.pexels.com/photos/7688336/pexels-photo-7688336.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop"
            altText="Büroreinigung"
          />
          <h3 class="text-xl font-bold text-jonas-dark-blue mt-4 text-center">Büroreinigung</h3>
        </div>
        
        <div>
          <BeforeAfterSlider 
            beforeImage="https://images.pexels.com/photos/3184338/pexels-photo-3184338.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop"
            afterImage="https://images.pexels.com/photos/5824901/pexels-photo-5824901.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop"
            altText="Glasreinigung"
          />
          <h3 class="text-xl font-bold text-jonas-dark-blue mt-4 text-center">Glasreinigung</h3>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Overview -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl lg:text-5xl font-bold text-jonas-dark-blue mb-6">Unsere Reinigungsdienstleistungen</h2>
        <p class="text-xl text-jonas-gray max-w-3xl mx-auto leading-relaxed">
          Von der täglichen Büroreinigung bis zur intensiven Grundreinigung - wir bieten maßgeschneiderte Lösungen für jeden Bedarf in Oldenburg und Umgebung.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Büroreinigung -->
        <div class="group bg-gradient-to-br from-white to-jonas-light-gray rounded-2xl p-8 shadow-soft hover:shadow-strong transition-all duration-500 transform hover:-translate-y-2 border border-gray-100">
          <div class="bg-gradient-to-br from-jonas-blue to-jonas-dark-blue text-white w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300 shadow-medium">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-jonas-dark-blue mb-4 group-hover:text-jonas-blue transition-colors duration-300">Büroreinigung</h3>
          <p class="text-jonas-gray mb-6 leading-relaxed">
            Professionelle Reinigung von Büroräumen, Konferenzräumen und Arbeitsplätzen. Täglich, wöchentlich oder nach Bedarf.
          </p>
          <ul class="space-y-3 text-jonas-gray mb-6">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Schreibtische und Arbeitsplätze
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Sanitäranlagen
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Küchen und Pausenräume
            </li>
          </ul>
          <a href="/bueroreinigung" class="inline-flex items-center text-jonas-blue font-semibold hover:text-jonas-dark-blue transition-colors duration-300">
            Mehr erfahren
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Grundreinigung -->
        <div class="group bg-gradient-to-br from-white to-jonas-light-gray rounded-2xl p-8 shadow-soft hover:shadow-strong transition-all duration-500 transform hover:-translate-y-2 border border-gray-100">
          <div class="bg-gradient-to-br from-jonas-blue to-jonas-dark-blue text-white w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300 shadow-medium">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-jonas-dark-blue mb-4 group-hover:text-jonas-blue transition-colors duration-300">Grundreinigung</h3>
          <p class="text-jonas-gray mb-6 leading-relaxed">
            Intensive Tiefenreinigung für Neubauten, nach Renovierungen oder als regelmäßige Intensivreinigung.
          </p>
          <ul class="space-y-3 text-jonas-gray mb-6">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Baustellenreinigung
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Renovierungsreinigung
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Tiefenreinigung
            </li>
          </ul>
          <a href="/grundreinigung" class="inline-flex items-center text-jonas-blue font-semibold hover:text-jonas-dark-blue transition-colors duration-300">
            Mehr erfahren
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Glasreinigung -->
        <div class="group bg-gradient-to-br from-white to-jonas-light-gray rounded-2xl p-8 shadow-soft hover:shadow-strong transition-all duration-500 transform hover:-translate-y-2 border border-gray-100">
          <div class="bg-gradient-to-br from-jonas-blue to-jonas-dark-blue text-white w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300 shadow-medium">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-jonas-dark-blue mb-4 group-hover:text-jonas-blue transition-colors duration-300">Glasreinigung</h3>
          <p class="text-jonas-gray mb-6 leading-relaxed">
            Streifenfreie Reinigung von Fenstern, Glasfassaden und Schaufenstern für kristallklare Durchsicht.
          </p>
          <ul class="space-y-3 text-jonas-gray mb-6">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Fensterreinigung innen & außen
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Glasfassaden
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Schaufenster
            </li>
          </ul>
          <a href="/glasreinigung" class="inline-flex items-center text-jonas-blue font-semibold hover:text-jonas-dark-blue transition-colors duration-300">
            Mehr erfahren
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Unterhaltsreinigung -->
        <div class="group bg-gradient-to-br from-white to-jonas-light-gray rounded-2xl p-8 shadow-soft hover:shadow-strong transition-all duration-500 transform hover:-translate-y-2 border border-gray-100">
          <div class="bg-gradient-to-br from-jonas-blue to-jonas-dark-blue text-white w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300 shadow-medium">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-jonas-dark-blue mb-4 group-hover:text-jonas-blue transition-colors duration-300">Unterhaltsreinigung</h3>
          <p class="text-jonas-gray mb-6 leading-relaxed">
            Regelmäßige Reinigung zur Werterhaltung Ihrer Immobilie mit flexiblen Intervallen nach Ihren Bedürfnissen.
          </p>
          <ul class="space-y-3 text-jonas-gray mb-6">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Regelmäßige Pflege
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Flexible Termine
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Werterhaltung
            </li>
          </ul>
          <a href="/unterhaltsreinigung" class="inline-flex items-center text-jonas-blue font-semibold hover:text-jonas-dark-blue transition-colors duration-300">
            Mehr erfahren
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>

        <!-- Sonderreinigung -->
        <div class="group bg-gradient-to-br from-white to-jonas-light-gray rounded-2xl p-8 shadow-soft hover:shadow-strong transition-all duration-500 transform hover:-translate-y-2 border border-gray-100">
          <div class="bg-gradient-to-br from-jonas-blue to-jonas-dark-blue text-white w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300 shadow-medium">
            <svg class="h-8 w-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-jonas-dark-blue mb-4 group-hover:text-jonas-blue transition-colors duration-300">Sonderreinigung</h3>
          <p class="text-jonas-gray mb-6 leading-relaxed">
            Spezielle Reinigungsdienstleistungen für besondere Anforderungen und außergewöhnliche Situationen.
          </p>
          <ul class="space-y-3 text-jonas-gray mb-6">
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
              Teppichreinigung
            </li>
            <li class="flex items-center">
              <span class="w-2 h-2 bg-jonas-blue rounded-full mr-3"></span>
